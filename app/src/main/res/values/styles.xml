<resources>
    <!-- Tema para o aplicativo -->
    <style name="Theme.ColorizeCam10" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Personalizações podem ser adicionadas aqui -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="NavigationMenuStyle" parent="Widget.Design.NavigationView">
        <item name="android:textSize">18sp</item>

        <!-- Cor do texto -->
        <item name="android:textColor">@color/black</item>

        <!-- Altura dos itens -->
        <item name="android:minHeight">60dp</item>

        <!-- Espaçamento interno -->
        <item name="android:padding">30dp</item>
    </style>
</resources>
